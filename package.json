{
  "name": "restify-boilerplate",
  "version": "0.0.0-semantically-released",
  "description": "restify microservice boilerplate",
  "main": "src/serve.js",
  "repository": "git@github.com:shellthor/microservice-boilerplate.git",
  "author": "Jeff Detmer <jeff.detmer@gmail.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^8.6.0",
    "npm": "^5.4.2",
    "yarn": "^1.1.0"
  },
  "scripts": {
    "add-contributor": "jmd-scripts contributors add",
    "build": "jmd-scripts build",
    "commit": "git-cz",
    "format": "jmd-scripts format",
    "lint": "jmd-scripts lint",
    "start":
      "nodemon src/serve --exec \"node --require babel-register --require babel-polyfill\" | bunyan",
    "test": "jmd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "jmd-scripts validate"
  },
  "eslintConfig": {
    "extends": ["./node_modules/jmd-scripts/eslint.js"]
  },
  "eslintIgnore": ["node_modules", "coverage", "dist"],
  "babel": {
    "presets": ["jmd-scripts/babel"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bunyan": "1.8.12",
    "bunyan-sentry-stream": "1.2.1",
    "cross-env": "5.1.1",
    "dotenv": "4.0.0",
    "helmet": "3.9.0",
    "joi": "13.0.2",
    "jsonwebtoken": "8.1.0",
    "lodash": "4.17.4",
    "mongoose": "4.13.6",
    "nodemon": "1.12.5",
    "passport": "0.4.0",
    "passport-jwt": "3.0.1",
    "passport-local": "1.0.0",
    "pg": "7.4.0",
    "pg-hstore": "2.3.2",
    "raven": "2.2.1",
    "restify": "6.3.4",
    "restify-cors-middleware": "1.0.1",
    "restify-errors": "5.0.0",
    "sequelize": "4.27.0"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "jmd-scripts": "1.3.0"
  }
}
